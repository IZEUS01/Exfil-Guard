{
  "manifest_version": 3,
  "name": "ExfilGuard",
  "version": "1.0",
  "description": "Real-time browser data exfiltration auditor",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "webRequest",
    "notifications"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["detector/detector.js"],
      "matches": ["<all_urls>"]
    }
  ]
}